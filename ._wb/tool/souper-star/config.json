{
    "$schema": "https://raw.githubusercontent.com/FredHutch/bash-workbench/main/docs/schema.json",
    "name": "souper-star",
    "description": "Analysis of single-cell CUT&RUN data with soupercell",
    "args": {
        "samplesheet": {
            "help": "Samplesheet: Columns are 'path' and 'sample'",
            "wb_type": "file",
            "required": true
        },
        "samplesheet_sep": {
            "help": "Samplesheet field separator (default: ,)",
            "wb_type": "string",
            "default": ","
        }
    }
}
