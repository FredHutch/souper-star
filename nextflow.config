params {
    samplesheet = false
    samplesheet_sep = ","
    sample_col = "sample"
    path_col = "path"
    umi_len = 10

    container__samtools = "quay.io/biocontainers/samtools:1.16.1--h6899075_1"
    container__simplesam = "quay.io/hdc-workflows/souper-star:dev"
    container__soupercell = "cumulusprod/souporcell:2021.03"
}

process {
    withLabel: io_limited {
        cpus = { 2 * task.attempt }
        memory = { 8.GB * task.attempt }
    }
    withLabel: cpu_large {
        cpus = { 16 * task.attempt }
        memory = { 30.GB * task.attempt }
    }
    withLabel: mem_large {
        cpus = { 16 * task.attempt }
        memory = { 120.GB * task.attempt }
    }

}